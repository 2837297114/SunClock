.top{
  background-color: #ffffff;
  display: flex;
  flex-wrap: wrap;
  padding: 50rpx 80rpx;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 25rpx;
}

.top .item:nth-child(1){
  flex-basis: 40%;
  margin-bottom: 50rpx;
}
.top .item:nth-child(2){
  flex-basis: 40%;
  margin-bottom: 50rpx;
}
.top .item:nth-child(3){
  flex-basis: 40%;
}
.top .item:nth-child(4){
  flex-basis: 40%;
}

.item{
  display: flex;
  flex-direction: column;
  text-align: center;
}

.top .item view:nth-child(1){
  color: #888888;
}

.top .item view:nth-child(2){
  font-size: 40rpx;
  color: #e9624f;
  margin-top: 25rpx;
}

.center{
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #ffffff;
  margin-bottom: 25rpx;
}

.tops{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom:2rpx solid #d9d9d9;
}

.tops view:nth-child(1){
  color: #353535;
}

.tops view:nth-child(2){
  color: #e9624f;
  font-size: 25rpx;
}

.itemRecord{
  display: flex;
  color: #888888;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 30rpx;
}

.itemRecord view:nth-child(1){
  flex-basis: 50%;
}

.itemRecord view:nth-child(2){
  flex-basis: 25%;
}

.itemRecord view:nth-child(3){
  flex-basis: 25%;
  text-align: right;
}

.notData{
  padding-top: 50rpx;
  padding-bottom: 50rpx;
}

.bottom{
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #ffffff;
}

ff-canvas {
  width: 100%;
  height: 100%;
}

.line{
  height: 400rpx;
  width: 100%;
}

.pos{
  position: absolute;
  left: -100%;
  height: 400rpx;
  width: 100%;
}