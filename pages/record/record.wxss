.itemRecord{
  display: flex;
  color: #888888;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 30rpx;
}

.itemRecord view:nth-child(1){
  flex-basis: 50%;
}

.itemRecord view:nth-child(2){
  flex-basis: 20%;
  padding-left: 20rpx;
}

.itemRecord view:nth-child(3){
  flex-basis: 30%;
  text-align: right;
}

.top{
  padding-left: 50rpx;
  padding-right: 50rpx;
}

.bottom{
  margin-top: 10rpx;
  text-align: center;
}