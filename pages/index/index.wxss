/*
* 选择时间
*/
.top{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.top view:nth-child(1){
  color: #000;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}

.top view:nth-child(2){
  color: #888;
  font-size: 30rpx;
}

.timing{
  display: inline-block;
  border-bottom: #e9624f 1rpx solid;
}

/*
* 分类选择
*/
.box{
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  color: #afafaf;
  margin-top: 60rpx;
}

.boxson{
  width: 220rpx;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.boxson view:nth-child(1){
  margin-bottom: 20rpx;
}

.boxson view image{
  width: 50rpx;
  height: 50rpx;
}

.box view:nth-child(1) view .boxson{
  border-bottom: 3rpx solid #eeeeee;
  border-right: 3rpx solid #eeeeee;
}

.box view:nth-child(2) view .boxson{
  border-bottom: 3rpx solid #eeeeee;
  border-right: 3rpx solid #eeeeee;
}

.box view:nth-child(3) view .boxson{
  border-bottom: 3rpx solid #eeeeee;
}

.box view:nth-child(4) view .boxson{
  border-right: 3rpx solid #eeeeee;
  border-bottom: 3rpx solid rgba(200, 200, 200, 0);
}

.box view:nth-child(5) view .boxson{
  border-right: 3rpx solid #eeeeee;
  border-bottom: 3rpx solid rgba(200, 200, 200, 0);
}

.box view:nth-child(6) view .boxson{
  border-bottom: 3rpx solid rgba(200, 200, 200, 0);
}

/*
* 开始计时
*/
.start{
  margin-top: 110rpx;
  font-size: 30rpx;
}

.start view{
  margin: auto;
  border: 3rpx solid #e9624f;
  width: 300rpx;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  border-radius: 80rpx;
  color: #e9624f;
}

/*
* 计时页
*/
.clock{
  overflow: hidden;
  background-color: #e9624f;
}

.progress{
  width: 600rpx;
  height: 600rpx;
  margin: 100rpx auto;
  position: relative;
}

.progress canvas:nth-child(1){
  width: 600rpx;
  height: 600rpx;
  position: absolute;
  left: 50%;
	top:50%;
	transform:translate(-50%,-50%);
}

.progress canvas:nth-child(2){
  width: 460rpx;
